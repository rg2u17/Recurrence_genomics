  pheno_file_10yr_colic_to_colic,
  genotype_for_gwas,
  by.x = "IID",
  by.y = "participant_id",
  all.x = TRUE
)

pheno_file_10yr_colic_to_colic2 <- merge(
  pheno_file_10yr_colic_to_colic2,
  age_IID2,
  by.x = "IID",
  by.y = "participant_id",
  all.x = TRUE
)

